<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script>
        function showAddNewGallery() {
            var newGallery = document.getElementById('new-gallery');
            newGallery.style.display = 'block';
        }
    </script>
  </head>
  <body>
    <div class="container d-flex justify-content-center">
        <div class="card mt-5 p-4">

            <div class="header-img">
                <div class="gallery-icon">
                    <div class="dropdown">
                        <a href="#" class="dropbtn"><img src="/images/icon8-gallery-64.png"></a>
                        <div class="dropdown-content">
                            <ul>
                                <% if (!loggedIn) { %>
                                    <li><a href="/login">Login</a></li>
                                <% } else { %>
                                    <li><a href="#" onclick="showAddNewGallery();return false;">Add New Gallery</a></li>
                                    <li><a href="/logout">Logout</a></li>
                                <% } %>
                            <ul>
                        </div>
                    </div>
                </div>
                <div class="app-icon"><a href="/"><img src="/images/icons8-gallery-64.png"></a><br> <br><p class="page-name">SeamasGallery</p></div>
            </div>
            
            <% if (loggedIn) { %>
            <div class="login-box">
                <div id="new-gallery">
                    <h2 class="page-title">New Gallery</h2>
                    <form action="/gallery/new" method="POST">
                        <div class="gallery-name"><input type="text" name="galleryName" placeholder="Name"></div>
                        <div class="gallery-icon-link"><input type="text" name="galleryIcon" placeholder="Icon URL [http]"></div>
                        <div class="gallery-url"><input type="text" name="galleryUrl" placeholder="Gallery URL [http]"></div>
                        <div class="gallery-btn"><button type="submit" class="btn btn-primary">Save</button></div>
                    </form>
                </div>
            </div>
            <% } %>
