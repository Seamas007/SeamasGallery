<%- include('partials/header.ejs') %>
    
    <form action="/q" method="POST" class="search-form" id="searchForm">
    <div class="input-group mb-3">
      <input type="text" class="form-control" name="searchInput" <% if (search != '') { %> value="<%= search %>" <% } %>>
      <div class="input-group-append"><button class="btn btn-primary"><i class="fas fa-search"></i></button></div>
    </div>
    </form>
    
    <% if (data != null) { data.forEach( item => { %>
    <div class="d-flex flex-row justify-content-between mb-3">
        <div class="d-flex flex-column p-3">
          <a href="<%= item.galleryUrl %>" target="_blank"><img src="<%= item.icon %>" class="icon-img"></a>
          <% if (loggedIn) { %>
            <div class="mb-1 p-1">
              <a href="/gallery/<%= item._id %>">Edit</a> &nbsp; 
              <a href="/gallery/delete/<%= item._id %>" class="red" onclick="return confirm('Confirm delete!');">Delete</a>
            </div>
          <% } %>
        </div>
        <div class="menu-code pt-4 pl-4">
          <a href="<%= item.galleryUrl %>" target="_blank">
            <div><img src="/images/icons8-qr-code-60.png" class="url-img"></div>
            <span class="mb-2">
              View Gallery
            </span>
          </a>
        </div>
    </div>
    <% }); } %>

<%- include('partials/footer.ejs') %>
